  "license": "ISC",
  "description": "",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@hello-pangea/dnd": "^18.0.1",
    "ajv": "^8.17.1",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "react-to-print": "^2.14.15",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.31",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
